
<div id="order-form">
<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.association :page, as: :hidden, input_html: { value: @page.id} %>
    <%= f.input :phone %>
    <%= f.input :message %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, input_html: {class: 'btn btn-primary'} %>
  </div>
<% end %>
</div>

<div id="rate-form">
  <%= simple_form_for(@page_rate) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :page_id,  as: :hidden, input_html: {value: @page.id} %>
      <%= f.input :name %>
      <%= f.input :phone %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, '获取链接'%>
    </div>
  <% end %>
</div>