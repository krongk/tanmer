<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Page</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Message</th>
      <th>Is processed</th>
      <th>Note</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.page %></td>
        <td><%= book.name %></td>
        <td><%= book.email %></td>
        <td><%= book.phone %></td>
        <td><%= book.address %></td>
        <td><%= book.message %></td>
        <td><%= book.is_processed %></td>
        <td><%= book.note %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

