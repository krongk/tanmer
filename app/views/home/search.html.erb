<% title '搜索' + params[:search] %>

<% content_for :side_bar do %>
  <li><small>共搜索到应用<strong><%= @users.size %></strong>个，页面<strong><%= @pages.size %></strong>个</small></li>
  <li><ul class="nav navbar-nav">
      <% @users.each do |user| %>
        <% next if current_user == user %>
        <li>
          <% if current_user && current_user != user %>
            <div id="follow_form_<%= user.id %>">
            <% if current_user.following?(user) %>
              <%= render partial: 'users/unfollow', locals: {other_user: user} %>
            <% else %>
              <%= render partial: 'users/follow', locals: {other_user: user} %>
            <% end %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </li>
<% end %>

<div class="content">
  <div class="portfolio-wrapper">
    <% @pages.each do |page| %>
      <div class="card film art">
        <%= link_to get_url(page), class: 'thumb' do %>
          <img src="<%= page.image %>" alt="<%= page.title %>" title="<%= page.title %>" />
          <span class="overlay"><span class="fa fa-search"></span></span>
        <% end %>
        <div class="card-body">
          <h2><%= link_to page.title, get_url(page) %></h2>
          <p><%= page.description %></p>
          <p><%= link_to '阅读更多', get_url(page) %></p>
        </div><!-- end card-body -->
      </div><!-- end card -->
    <% end %>
  </div><!-- end portfolio-wrapper -->
  <div class="pagination-wrapper">
    <%= will_paginate @pages %>
  </div>
</div><!-- end content -->