<% title '搜索' + params[:search] %>

<% content_for :side_bar do %>

<% end %>

<div class="page">
  <article>
    <div class="page-header">
      <h1>搜素结果</h1>
      <p class="lead">共搜索到应用<strong><%= @users.try(:size) %></strong>个，页面<strong><%= @pages.try(:size) %></strong>个</p>
    </div><!-- end page-header -->
    <table class="table table-hover">
      <thead>
        <tr>
          <th>资源包</th>
          <th>描述</th>
          <th>应用数</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <% next if user == current_user %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.description %></td>
            <td><%= user.pages.size %></td>
            <td>
              <div id="follow_form_<%= user.id %>">
                <% if current_user.following?(user) %>
                  <%= render partial: 'users/unfollow', locals: {other_user: user} %>
                <% else %>
                  <%= render partial: 'users/follow', locals: {other_user: user} %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        <tr>
          <td>&nbsp;</td>
          <td colspan="2">&nbsp;</td>
          <td><%= link_to user_path(current_user.id) do %>
                      <i class="fa fa-qrcode"></i>  我的订阅
                    <% end %></td>
        </tr>
      </tbody>
    </table>

  </article>
</div>
<div class="content">
  <div class="portfolio-wrapper">
    <% @pages.each do |page| %>
      <div class="card film art">
        <%= link_to get_url(page), class: 'thumb' do %>
          <img src="<%= page.image %>" alt="<%= page.title %>" title="<%= page.title %>" />
          <span class="overlay"><span class="fa fa-search"></span></span>
        <% end %>
        <div class="card-body">
          <h2><%= link_to page.title, get_url(page) %></h2>
          <p><%= page.description %></p>
          <p><%= link_to '阅读更多', get_url(page) %></p>
        </div><!-- end card-body -->
      </div><!-- end card -->
    <% end %>
  </div><!-- end portfolio-wrapper -->
  <div class="pagination-wrapper">
    <%= will_paginate @pages %>
  </div>
</div><!-- end content -->