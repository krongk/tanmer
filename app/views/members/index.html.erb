<h2>会员管理</h2>
<div class="table-responsive">
  <table class="table table-alternative table-hover">
    <thead>
      <tr>
        <th>电话</th>
        <th>姓名</th>
        <th>转发次数</th>
        <th>注册时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%=link_to member.phone, user_member_path(current_user, member) %></td>
        <td><%= member.name %></td>
        <td><%= member.page_rates.size %></td>
        <td><%= member.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '删除', user_member_path(current_user, member), method: :delete, data: { confirm: '确定要删除吗?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>